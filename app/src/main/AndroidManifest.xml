<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- OpenGL ES 3.0 for jMonkeyEngine -->
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QuestHelloWorldApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuestHelloWorld"
        android:hardwareAccelerated="true"
        android:largeHeap="true">

        <!-- Tell Quest this is a 2D panel app, NOT an immersive VR app -->
        <meta-data android:name="com.oculus.supportedDevices" android:value="quest|quest2|quest3|questpro" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|navigation"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.QuestHelloWorld.Fullscreen">

            <!-- Standard launcher intent only - no VR category -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
